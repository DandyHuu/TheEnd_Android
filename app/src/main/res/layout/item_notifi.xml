<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="#A6FFFFFF"
    android:layout_marginTop="5dp"
    android:padding="10dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_gravity="top"
        android:id="@+id/im_user_comment"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_notifications_black_24dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:background="@drawable/shape_boder"
        android:backgroundTint="#2A9C9C9C"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_name_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông báo"
                android:textColor="#D83A3A3A"
                android:textSize="17sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_date_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text=" 10/09/2019"
                android:textColor="#5C5C5C"
                android:textSize="15sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
<!--            <TextView-->
<!--                android:id="@+id/tv_fullname_notification"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text=" DandyHuu"-->
<!--                android:textStyle="bold"-->
<!--                android:textSize="17sp" />-->
            <TextView
                android:id="@+id/tv_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" tv_notification"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>